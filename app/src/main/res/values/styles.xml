<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/CustomBottomSheetAnimation</item>
        <item name="bottomSheetStyle">@style/CustomShapeAppearanceBottomSheet</item>
    </style>

    <style name="CustomBottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="StartButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
</resources>
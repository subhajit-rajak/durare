<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/CustomBottomSheetAnimation</item>
        <item name="bottomSheetStyle">@style/CustomShapeAppearanceBottomSheet</item>
    </style>

    <style name="CustomBottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="StartButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="PushupTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>
        <item name="colorOnSurface">@color/dark_grey</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary</item>
    </style>

    <style name="ChartStyle">
        <item name="layers">line</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>

    <style name="TopCornersRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="LeftCornersRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RightCornersRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <style name="AllExceptTopRightRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/very_light_grey</item>
        <item name="android:elevation">8dp</item>
        <item name="android:itemTextAppearance">@style/CustomPopupMenuText</item>
    </style>

    <style name="CustomPopupMenuText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
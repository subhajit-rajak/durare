<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="@color/very_light_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_goal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/special_gothic_semiexpanded_semibold" />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/how_many_pushups_do_you_want_to_aim_for_each_day"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/special_gothic_semiexpanded_regular" />

        <com.google.android.material.slider.Slider
            android:id="@+id/goalSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="10"
            android:valueTo="200"
            android:value="10"
            android:stepSize="5"
            app:trackHeight="24dp"
            android:layout_marginTop="10dp"
            app:haloColor="@color/level_2"
            app:thumbColor="@color/very_dark_grey"
            app:tickVisible="false"
            app:trackColorActive="@color/primary"
            app:trackColorInactive="@color/light_grey_85"
            app:haloRadius="8dp"
            app:thumbRadius="8dp"/>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/dialogCancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special_gothic_semiexpanded_semibold"
                android:text="@string/cancel"
                android:textColor="@color/grey"
                app:rippleColor="@android:color/transparent" />

            <Button
                android:id="@+id/dialogOk"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_goal"
                android:fontFamily="@font/special_gothic_semiexpanded_semibold"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>